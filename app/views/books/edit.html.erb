<h1>Editing Book</h1>
<div class="flash"><%= flash[:notice] %></div>

<% if @book.errors.any? %>
  <div id="error_box">
    <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  
  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  
    <div class="newbook_error">
      <div class="newbook_label">
        <div class="newbook_display">Title</div>
        <div class="newbook_display"><%= f.text_field :title %></div>
      </div>
      
      <div class="newbook_label">
        <div class="newbook_display">Body</div>
        <div class="newbook_display"><%= f.text_area :body %></div>
      </div>
      
      <div class="newbook_label_error">
        <%= f.submit'Update Book'%>
      </div>
    </div>
  <% end %>
  
<% else %>
  
  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

    <div class="newbook">
      <div class="newbook_label">
        <div>Title</div>
        <%= f.text_field :title %>
      </div>
    
      <div class="newbook_label">
        <div>Body</div>
        <%= f.text_area :body %>
      </div>
    
      <div class="newbook_label">
        <%= f.submit'Update Book'%>
      </div>
    </div>
  <% end %>
  
<% end %>

<span><%= link_to "Show", book_path(@book.id) %></span>
 | 
<span><%= link_to "Back", "/books" %></span>














